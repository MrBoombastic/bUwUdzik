<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/widget_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_background_shape"
        android:orientation="vertical"
        android:padding="12dp">

    <!-- Temperature: Main focus, largest text -->
    <TextView
            android:id="@+id/widget_temp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:autoSizeMaxTextSize="72sp"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/widget_placeholder_temp"
            android:textColor="@color/widget_text_primary"
            android:textStyle="bold" />

    <!-- Humidity & Battery Row -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/widget_humidity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/widget_placeholder_hum"
                android:textColor="@color/widget_humidity"
                tools:ignore="NestedWeights" />

        <TextView
                android:id="@+id/widget_battery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/widget_placeholder_bat"
                android:textColor="@color/widget_text_secondary" />
    </LinearLayout>

    <!-- Footer: Last Update & Refresh -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

        <TextView
                android:id="@+id/widget_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/widget_refresh_btn"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:text="@string/time_placeholder"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary" />

        <ImageButton
                android:id="@+id/widget_refresh_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/refresh_button_bg"
                android:contentDescription="@string/refresh"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_refresh" />

        <ProgressBar
                android:id="@+id/widget_loading"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>

